		"tsup": "^8.2.4",
		"typescript": "^5.5.4",
		"vitest": "1.5.0",
		"wrangler": "^3.68.0"
	},
	"dependencies": {
		"@types/bun": "^1.1.6",
		"arktype": "2.0.0-beta.2",
		"cookie": "^0.6.0",
		"devalue": "^5.0.0",
