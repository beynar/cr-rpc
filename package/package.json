		"dev": "wrangler dev",
		"build": "tsup && node fixBuildTypes.js",
		"build-dev": "tsup --watch && node fixBuildTypes.js",
		"start": "wrangler dev",
		"test": "vitest --ui"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
